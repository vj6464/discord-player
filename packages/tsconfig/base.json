{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Default",
    "compilerOptions": {
        "target": "ES2022",
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
        "noEmit": true,
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "pretty": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}